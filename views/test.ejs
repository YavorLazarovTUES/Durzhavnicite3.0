<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Three Section Layout</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        .scrollbar::-webkit-scrollbar {
            width: 8px;
        }
        .scrollbar::-webkit-scrollbar-track {
            background: #f1f1f1;
        }
        .scrollbar::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 4px;
        }
        .scrollbar::-webkit-scrollbar-thumb:hover {
            background: #555;
        }
    </style>
</head>
<body class="h-screen flex bg-gray-100">
    <div class="w-full h-full flex">
        
        <!-- Companies list -->
        <div class="w-1/4 h-full p-4 overflow-y-auto bg-white flex flex-col space-y-4 scrollbar">
            <% allstocks.forEach(stock => { %>
              <div class="flex items-center gap-4 p-4 border-2 border-gray-300 rounded-2xl shadow-lg bg-gray-100 " data-stock-id="<%= stock.ticker %>" >
                <img src="../logos/<%= stock.ticker %>.png" class="h-16 w-16 object-contain rounded-full" alt="<%= stock.company_name %> logo">
                <h6 class="text-xl font-semibold text-gray-800"><%= stock.company_name %> </h6> 
              </div>
            <% }); %>
          </div>
             
         
    
        <!-- Stocks visualiser -->
        <div class="w-2/4 h-full p-4 bg-gray-200 shadow-md">
            <select id="timeRange">
                <option value="1">1M</option>
                <option value="3">3M</option>
                <option value="6">6M</option>
                <option value="12">1Y</option>
            </select>  
            <canvas id="myChart"></canvas>
        </div>
        
<!--         News section -->
        <div class="w-1/4 h-full p-4 overflow-y-auto bg-white shadow-lg flex flex-col space-y-4">
            <% news.forEach((artcl) => { %>
                <div class="aricle">
                        <h6>
                            <%= artcl.title %>
                        </h6>
                        <p>
                            <%= artcl.body %>
                        </p>
                </div>
            <% }); %>
        </div>
        
    
    </div>
    <script>
        let chart;
        const ctx = document.getElementById('myChart').getContext('2d');

        function updateChart(labels, data) {
            if (chart) {
                chart.destroy(); // Destroy old chart instance
            }
            chart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: '<%- stockdata.company_name %> stock price',
                        data: data,
                        fill: true,
                        borderColor: 'rgb(0, 0, 192)',
                        tension: 0
                    }]
                } 
            });
        }
        updateChart(<%- JSON.stringify(days) %>, <%- JSON.stringify(stock_price_array) %>);

        const objSelect = document.getElementById('timeRange');
        
        let t = '<%= timePeriod %>';
        let optSelected = objSelect.querySelector(`option[value="${t}"]`);
        
        let currentlySelected = objSelect.querySelector('option[selected]');
        if (currentlySelected) {
            currentlySelected.removeAttribute('selected');
        }

        // Set the selected attribute for the correct option
        if (optSelected) {
            optSelected.setAttribute('selected', 'true');
        }


  

        document.getElementById('timeRange').addEventListener('change', async function () {
            const timePeriod = this.value;
            const string = `/ <%= stockdata.ticker %>/${timePeriod}`;
            window.location.href = string;
        });

        document.querySelectorAll("[data-stock-id]").forEach(element => {
            element.addEventListener("click", () => {
                const stockId = element.dataset.stockId; // Get stock ID from attribute
                
                // Get current URL and split it into parts
                const urlParts = window.location.href.split("/");

                // Ensure the URL has at least three parts (host, stock, time)
                if (urlParts.length >= 4) {
                urlParts[3] = stockId; // Replace the stock part
                const newUrl = urlParts.join("/"); // Rebuild the URL

                window.location.href = newUrl; // Redirect to new URL
                }
            });
        });

    </script>
</body> 
</html>
